rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: authenticated users can read/write their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Invite codes: admins create/delete. Read allowed without auth so users can
    // validate codes during registration (before they're logged in).
    // Update allowed for authenticated users (to consume code after registration).
    match /inviteCodes/{codeId} {
      allow read: if true;
      allow create: if request.auth != null 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', '') == 'admin';
      allow update: if request.auth != null;
      allow delete: if request.auth != null 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', '') == 'admin';
    }
  }
}
